{
  "name": "wordpress-sample",
  "description": "Sample wordpress deployment",
  "packets": [
    {
      "name": "wordpress",
      "image": "wordpress:latest",
      "ports": [
        {
          "port": "80"
        }
      ],
      "volumes": [
        {
          "name": "wp-data",
          "path": "/var/www/html"
        }
      ],
      "environment": [
        {
          "key": "WORDPRESS_DB_HOST",
          "value": "db"
        },
        {
          "key": "WORDPRESS_DB_USER",
          "value": "exampleUser"
        },
        {
          "key": "WORDPRESS_DB_PASSWORD",
          "value": "examplePassword"
        },
        {
          "key": "WORDPRESS_DB_NAME",
          "value": "sampleDatabase"
        }
      ]
    },
    {
      "name": "db",
      "image": "mysql:5.7",
      "ports": [
        {
          "port": "3306"
        }
      ],
      "volumes": [
        {
          "name": "db-data",
          "path": "/var/lib/mysql"
        }
      ],
      "environment": [
        {
          "key": "MYSQL_DATABASE",
          "value": "sampleDatabase"
        },
        {
          "key": "MYSQL_USER",
          "value": "exampleUser"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "examplePassword"
        },
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "exampleRootPassword"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "wp-data",
      "capacity": 3
    },
    {
      "name": "db-data",
      "capacity": 5
    }
  ]
}
